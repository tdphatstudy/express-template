{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/config/*": ["config/*"],
      "@/controllers/*": ["controllers/*"],
      "@/routes/*": ["routes/*"],
      "@/models/*": ["models/*"],
      "@/services/*": ["services/*"],
      "@/types/*": ["types/*"],
      "@/helpers/*": ["helpers/*"],
      "@/constant/*": ["constant/*"],
      "@/migrations/*": ["migrations/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
